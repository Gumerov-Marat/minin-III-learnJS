body
  header(#header)
    h1.title БЛОГ 001001
    h2.subtitle Создавайте статьи и добавляйте их в избранное
    button.get-started.button.button-primary.button-large.js-header-start Приступить

  section.container w-container
    ul.tabs#navigation
      li
        a(class="tab " href="#" data-name="posts") Посты
        a(class="tab active" href="#" data-name="create") Создать
        a(class="tab" href="#" data-name="favorite") Избранное

    .loader-wrap.hide#loader
      .lds-ripple
        div
        div

    form#create
      h1.h4 Создать новый пост
      .form-control
        label Название
        input(type="text" name="title" placeholder="Введите название")

    form#form-control
      label Текст
      textarea(name="fulltext" placeholder="Введите текст поста")

    .form-control
      label Тип
      select(name="type")
        option(value="note" selected) Заметка
        option(value="news") Новость

    button.button-primary.button-round.button-shadow(type='submit') Создать

    #posts
      .panel
        .panel-head
          p.panel-title Название поста
          ul.tags
            li.tag.tag-blue.tag-rounded Новость
        .panel-body
          p.multi-line Lorem ipsum dolor sit amet.
        .panel-footer.w-panel-footer
          small 12.12.12
    #favorite.hide